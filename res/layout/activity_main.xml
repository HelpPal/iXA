<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".ActivityMain" >

    <ImageView
        android:id="@+id/imgCountry"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:contentDescription="Logo"
        android:src="@drawable/main_logo" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/imgCountry"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#07306E"
                android:paddingLeft="10dp"
                android:text="Please choose what you are looking for"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
            
            <ListView
                android:id="@+id/listviewCategory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000" >

	        </ListView>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#07306E"
                android:paddingLeft="10dp"
                android:text="General"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

            <ListView
                android:id="@+id/ListViewSetting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000" >

            </ListView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgSelectCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgCountry"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/imgCountry" />
    
</RelativeLayout>

